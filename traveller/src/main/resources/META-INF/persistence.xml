<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.0"
        xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="wgtest">
        <properties>
            <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="eclipselink.jdbc.user" value="wgtest" />
            <property name="eclipselink.jdbc.password" value="wgtest"/>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://appleseed:3306/wgtest"/>

            <property name="eclipselink.ddl-generation" value="none"/>
        </properties>
    </persistence-unit>

</persistence>
