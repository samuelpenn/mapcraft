<facilities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:w="http://glendale.org.uk/mapcraft/worldgen">

    <group name="Primitive" base="primitive">
        <facility name="Hunter Gatherer" type="Agriculture">
            <codes>T0 P3 P4 P5 H0 H1</codes>
            <consume>WpnH</consume>
            <operation level="75">Ag</operation>
            <operation level="50">AgHu</operation>
            <operation level="5">MiSi</operation>
        </facility>

        <facility name="Primitive Tribes" type="Residential">
            <codes>T0 P3 P4 P5 H0 H1</codes>
            <require>Fo ClCv HoTl</require>
            <consume>HoLu HoCl WpnH</consume>
            <map from="Animal products" to="Animal skins" level="100"/>
            <map from="Silicate ore" to="Stone tools" level="100"/>
            <map from="Silicate ore" to="Neolithic art" level="10"/>
            <map from="Silicate ore" to="Stone weapons" level="50"/>
        </facility>
    </group>             
</facilities>