
<project name="MapCraft" default="all" basedir=".">

    <target name="all">
        <copy todir="build">
            <fileset dir="src"/>
        </copy>
        <javac srcdir="build" destdir="build" debug="on"/>
        <jar basedir="build" jarfile="mapcraft.jar"
             manifest="MANIFEST.MF"
             excludes="**/*.java"
        />
    </target>

    <target name="docs">
        <javadoc
            classpath="."
            sourcepath="src"
            packagenames="uk.co.demon.bifrost.rpg.mapcraft.*"
            destdir="docs/api"
            windowtitle="Map Maker API"
        />
    </target>

    <target name="test">

        <mkdir dir="tests/reports"/>
        <junit>
            <formatter type="xml"/>
            <classpath>
                <pathelement location="build"/>
                <pathelement path="${java.class.path}"/>
            </classpath>
            <test name="uk.co.demon.bifrost.rpg.mapcraft.map.MapTest"
                  todir="tests"/>
        </junit>

        <junitreport todir="tests/reports">
            <fileset dir="tests">
                <include name="TEST-*.xml"/>
            </fileset>
            <report format="frames" todir="tests/reports/html"/>
        </junitreport>
    </target>

</project>
